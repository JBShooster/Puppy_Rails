<h1>Edit <%= @puppy.name %></h1>

<% if @puppy.errors.any? %>
  <% @puppy.errors.full_messages.each do |error|  %>
    <p><font color="red">
    <%= error %>
    </font></p> 
  <% end %>
<% end %>

<%= form_for @puppy, url:"/puppies/#{@puppy.id}", method:"put" do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name %>
  <%= f.label :Age %>
  <%= f.text_field :age %>
  <%= f.label :Breed %>
  <%= f.text_field :breed %>

  <%= f.submit %>
<% end %>

<%= link_to "Delete this puppy!", "/puppies/#{@puppy.id}", method:"delete", data:{confirm: "You seriously want to destroy a puppy? What's wrong with you???"}%>
<br>
<%= link_to "Back", "/puppies" %>

