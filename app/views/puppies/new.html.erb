<h1>Puppies#new</h1>

<% if @puppy.errors.any? %>
  <% @puppy.errors.full_messages.each do |error|  %>
    <p><font color="red">
    <%= error %>
    </font></p> 
  <% end %>
<% end %>

<%= form_for @puppy, url:'/puppies' do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name %>
  <%= f.label :Age %>
  <%= f.text_field :age %>
  <%= f.label :Breed %>
  <%= f.text_field :breed %>

  <%= f.submit %>
<% end %>
<br>
<a href="/authors">Back</a>

